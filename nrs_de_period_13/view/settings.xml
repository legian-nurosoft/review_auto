<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="nrs_period_13_setting_view_form" model="ir.ui.view">
		<field name="name">nrs.period.13.setting.view.form</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="account.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//div[@id='dynamic_report']" position="after">
				<div class="col-12 col-lg-6 o_setting_box">
					<div class="o_setting_left_pane">
						<field name="nrs_period13" widget="upgrade_boolean" />
					</div>
					<div class="o_setting_right_pane">
						<label for="nrs_period13" />
						<div class="text-muted">
								Period 13
							</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>